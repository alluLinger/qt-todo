{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-app",
            "type": "shell",
            "group": "build",
            "command": ":",
            "dependsOrder": "sequence",
            "dependsOn": [
                "qmake-app",
                "make",
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "build-test",
            "type": "shell",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "qmake-test",
                "make",
                "run-test"
            ],
            "problemMatcher": "$gcc"
        },
        {
            "label": "qmake-app",
            "type": "shell",
            "command": [
                "qmake-qt5",
            ]
        },
        {
            "label": "qmake-test",
            "type": "shell",
            "command": [
                "qmake-qt5 test=1"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "make -j5",
            "problemMatcher": "$gcc"
        },
        {
            "label": "run-test",
            "type": "shell",
            "command": "./testing/qt-todo"
        }
    ]
}